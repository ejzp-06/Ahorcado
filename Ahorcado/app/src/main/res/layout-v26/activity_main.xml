<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanch.ahorcado.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textoprincipal"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Test"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/jugarbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="10dp"
        android:text="Jugar"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/repositoriobtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginHorizontal="160dp"
        android:text="Repositorio"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/dificultadbtn"

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="5dp"

        android:text="Dificultad"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/reportebtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="5dp"
        android:text="Reporte"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/salirbtn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="5dp"
        android:text="Salir"
        tools:ignore="HardcodedText" />
</LinearLayout>
