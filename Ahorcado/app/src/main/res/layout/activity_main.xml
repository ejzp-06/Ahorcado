<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sanch.ahorcado.MainActivity"
    android:orientation="vertical"
 android:background="@drawable/bckgroundnew"


>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="124dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455"
        app:lottie_autoPlay="true"
        app:lottie_fileName="ripple_loading_animation.json"
        app:lottie_loop="true" />

    <Button
        android:id="@+id/repositoriobtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="371dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="5dp"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/dificultadbtn"

        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="344dp"
        android:layout_height="39dp"
        android:layout_gravity="center"

        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="8dp"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.794"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/reportebtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="8dp"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.891"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/jugarbtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="267dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="8dp"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.592"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/salirbtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="182dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="160dp"
        android:layout_marginTop="8dp"

        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardcodedText" />
</android.support.constraint.ConstraintLayout>
